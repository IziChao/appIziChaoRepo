<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IziChao.Views.VentanaFinalizarCompra" 
             BackgroundImage="FONDO8.jpg">
    <ContentPage.Content>
        <StackLayout>
            <Frame  Margin="40" HeightRequest="365"
                       Padding="15" BackgroundColor="White">

            </Frame>

            <Button Text="Salir" Margin="15" Padding="10" CornerRadius="15" BackgroundColor="#7B5C36" TextColor="White"  FontSize="18" 
                        x:Name="BtnSalir" BorderColor="White" BorderWidth="2" Clicked="BtnSalir_Clicked"/>
            <Button Text="Realizar otra Compra" Margin="5" Padding="5" CornerRadius="15" BackgroundColor="#7B5C36" TextColor="White"  FontSize="18" 
                        x:Name="BtnRealizarOtraCompra" BorderColor="White" BorderWidth="2" Clicked="BtnOtraCompra_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>