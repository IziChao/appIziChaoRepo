<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IziChao.Views.VentanaPago"
             BackgroundImage="FONDO7.jpeg">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="15,90" Margin="53">
                <Entry  x:Name="boxNomPropietario" Placeholder="Nombre del Propietario" />
                <Entry  x:Name="boxApePropietario" Placeholder="Apellido del Propietario"/>
                <Entry  x:Name="boxNumTarjeta" Placeholder="Numero de Tarjeta"/>
                <Entry  x:Name="boxCVV" Placeholder="CVV"/>
                <Entry  x:Name="boxFeVencimiento" Placeholder="Fecha de Vencimiento"/>
                <Entry  x:Name="boxCorreo" Placeholder="Correo electronico"/>

            </StackLayout>

            <StackLayout >
                <Button Text="Pagar Compra" Margin="0,30,0,0"  CornerRadius="15" BackgroundColor="#7B5C36"
                                TextColor="White"  FontSize="18" 
                                    x:Name="BtnPagarCompra" BorderColor="White" BorderWidth="2" Clicked="BtnPagarCompra_Clicked">

                </Button>
            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>