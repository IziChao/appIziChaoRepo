<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IziChao.Views.Ventana3CrearCuenta"
             BackgroundImageSource="V3.png">
    <ContentPage.Content>
       

         <StackLayout >
            <StackLayout  Padding="20" Margin="50,300,50,0">
                <Entry Placeholder="Nombres"  x:Name="txtNombre" />
                <Entry Placeholder="Apellidos" x:Name="txtApe"  />
                <Entry Placeholder="DNI" x:Name="txtdni"  />
                <Entry Placeholder="Contraseña" IsPassword="True" x:Name="txtContra"/>
            </StackLayout>

                    <StackLayout Margin="0,55,0,0">
                        <Button
                        Text="Registrarse"
                        Padding="15"
                        VerticalOptions="EndAndExpand"
                        HorizontalOptions="CenterAndExpand" 
                        FontSize="20"
                        CornerRadius="15" 
                        BackgroundColor="#7B5C36" 
                        TextColor="White"
                        BorderColor="white"
                        BorderWidth="2"
                        x:Name="btnIniciarSesion"
                        Clicked="BtnIngresar_Clicked"/>
                    </StackLayout>


                </StackLayout>

    </ContentPage.Content>
</ContentPage>